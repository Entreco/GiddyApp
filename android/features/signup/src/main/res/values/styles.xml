<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SignupTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="android:windowBackground">@color/sheet</item>
        <item name="android:statusBarColor">@color/almost_black</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:title">@string/app_name</item>

        <!-- Required for sign-in flow styling -->
        <item name="colorPrimary">@color/almost_black</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Signup">
        <item name="android:gravity">center</item>
    </style>

    <style name="Signup.Title">
        <item name="android:paddingTop">@dimen/large</item>
        <item name="android:paddingBottom">@dimen/def</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/almost_black</item>
        <item name="android:fontFamily">sans-serif-black</item>
    </style>

    <style name="Signup.Description">
        <item name="android:textSize">14sp</item>
        <item name="android:paddingBottom">@dimen/large</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="SignupBtn" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">4dp</item>
        <item name="elevation">2dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginStart">@dimen/large</item>
        <item name="android:layout_marginEnd">@dimen/large</item>
        <item name="android:layout_marginTop">@dimen/def</item>
        <item name="contentPadding">@dimen/medium</item>
        <item name="iconPadding">@dimen/small</item>
        <item name="android:strokeColor">@color/almost_black</item>
    </style>

    <style name="SignupBtn.Email">
        <item name="android:text">@string/sign_btn_email</item>
        <item name="android:textColor">@color/almost_white</item>
        <item name="backgroundTint">?attr/colorPrimary</item>
    </style>

    <style name="SignupBtn.Phone">
        <item name="android:text">@string/sign_btn_phone</item>
        <item name="android:textColor">@color/almost_white</item>
        <item name="backgroundTint">?attr/colorPrimary</item>
    </style>

    <style name="SignupBtn.Google">
        <item name="android:text">@string/sign_btn_google</item>
        <item name="android:textColor">#999999</item>
        <item name="rippleColor">#F1F1F1</item>
        <item name="backgroundTint">@color/white</item>
    </style>
    <style name="SignupBtn.Facebook">
        <item name="android:text">@string/sign_btn_facebook</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">#4D62AF</item>
    </style>

    <style name="SignupLogo">
        <item name="android:tint">@color/almost_black</item>
    </style>
</resources>