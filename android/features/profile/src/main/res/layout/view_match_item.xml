<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
                name="like"
                type="nl.entreco.giddyapp.libauth.user.UserLike" />

        <variable
                name="loader"
                type="nl.entreco.giddyapp.libimg.loader.ImageLoader" />
    </data>

    <com.google.android.material.card.MaterialCardView
            style="@style/RoundedImage"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_margin="@dimen/def"
            android:clipToPadding="false"
            app:cardBackgroundColor="@color/almost_white"
            app:cardElevation="2dp"
            app:cardCornerRadius="36dp">

        <ImageView
                android:contentDescription="@{like.horseName}"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:ga_ref="@{like.horseRef}"
                app:ga_image="@{null}"
                app:ga_loader="@{loader}"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:gravity="center"
                android:textSize="8sp"
                android:background="#eeffffff"
                android:fontFamily="sans-serif-condensed-light"
                android:padding="@dimen/small"
                android:text="@{like.horseName}"
                tools:text="@string/app_name"/>

    </com.google.android.material.card.MaterialCardView>

</layout>