<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ExpandedToolbar" parent="ToolbarGone" />
    <style name="CollapsedToolbar" parent="ToolbarVisible" />

    <style name="ProfileHeaderButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">?attr/colorPrimary</item>
    </style>

    <style name="ProfileHeaderLogo">
        <item name="android:contentDescription">@null</item>
        <item name="android:foregroundTint">@color/white</item>
        <item name="android:alpha">0.2</item>
        <item name="android:src">@drawable/ic_launcher_foreground</item>
    </style>

    <style name="ProfileMenuItem" parent="TextAppearance.AppCompat.Headline">
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
    </style>

    <style name="ProfileSubItem" parent="TextAppearance.AppCompat.Caption">
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
    </style>
</resources>