<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="viewModel" type="nl.entreco.giddyapp.creator.CreatorViewModel"/>
        <variable name="picker" type="nl.entreco.giddyapp.core.images.ImagePicker"/>
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/def">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/creator_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/creator_description"
                    app:layout_constraintVertical_chainStyle="packed"
                    android:hint="@string/create_name">

                <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@={viewModel.name}"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/creator_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/creator_name"
                    app:layout_constraintBottom_toTopOf="@id/creator_image"
                    android:hint="@string/create_description">

                <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@={viewModel.description}"/>

            </com.google.android.material.textfield.TextInputLayout>

            <ScrollView
                    android:id="@+id/creator_image"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/creator_description"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintBottom_toBottomOf="parent">
                <ImageView
                        android:importantForAccessibility="no"
                        android:contentDescription="@null"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:ga_preview="@{viewModel.image}"
                        android:background="#ff6650"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"/>
            </ScrollView>

            <TextView
                    android:id="@+id/creator_select"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:text="@string/select_image"
                    android:focusable="true"
                    android:clickable="true"
                    android:gravity="center"
                    android:visibility="@{viewModel.showImage}"
                    android:onClick="@{() -> picker.selectImage()}"
                    app:layout_constraintStart_toStartOf="@id/creator_image"
                    app:layout_constraintEnd_toEndOf="@id/creator_image"
                    app:layout_constraintTop_toTopOf="@id/creator_image"
                    app:layout_constraintBottom_toBottomOf="@id/creator_image"/>


            <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:onClick="@{() -> viewModel.tryUpload()}"
                    android:enabled="@{viewModel.isValid}"
                    android:text="@string/upload"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>