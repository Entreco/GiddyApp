<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@color/almost_white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="AppTheme.ViewerTheme">
        <item name="android:windowBackground">@drawable/pattern</item>
        <item name="android:statusBarColor">@color/almost_black</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="AppTheme.CreatorTheme">
        <item name="android:windowBackground">@drawable/pattern</item>
        <item name="android:statusBarColor">@color/almost_black</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="AppTheme.ProfileTheme">
        <item name="android:windowBackground">@drawable/pattern</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="AppTheme.SignupTheme">
        <item name="android:windowBackground">@drawable/pattern</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

</resources>