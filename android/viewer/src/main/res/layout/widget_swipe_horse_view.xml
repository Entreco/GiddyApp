<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
                name="model"
                type="nl.entreco.giddyapp.viewer.swiper.SwipeHorseModel"/>

        <variable
                name="loader"
                type="nl.entreco.giddyapp.core.images.ImageLoader"/>
    </data>

    <merge
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
                android:layout_margin="@dimen/def"
                android:id="@+id/image"
                android:contentDescription="@null"
                android:importantForAccessibility="no"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:ga_image="@{model.image}"
                app:ga_loader="@{loader}"
                android:scaleType="centerCrop"/>

        <TextView
                android:gravity="center"
                android:fontFamily="sans-serif-thin"
                android:padding="@dimen/def"
                android:layout_margin="@dimen/def"
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{model.name}"
                android:textColor="@color/almost_black"
                android:layout_gravity="bottom"
                tools:text="@string/app_name"/>

    </merge>

</layout>